@{
	var cat = ViewBag.Categories as List<Category>;
	var color = ViewBag.Color as List<ColorModel>;
	var sizes = ViewBag.Sizes as List<SizeModel>;
	var mat = ViewBag.Material as List<MaterialModel>;
}


<h1 class="title text-bolder ms-5 mb-4 mt-3">Dacci una mano</h1>

<div class="container-fluid">
	<div class="row">
		<div class="sidebar col-md-2 d-none d-md-block d-flex flex-column">

			<a class="text-decoration-none text-dark mt-4 mx-3" id="Add" style="cursor:pointer">Aggiungi</a>
			<hr class="text-secondary" />
			<a class="text-decoration-none text-dark mx-3" id="manageForm" style="cursor:pointer">Elimina o modifica</a>

		</div>


		<div class="col-md-10" id="formContainer">
			<div id="addForm" style="display: none;">
				@await Html.PartialAsync("_Add")
			</div>
		</div>
	</div>
</div>

<script>
	document.getElementById('Add').addEventListener('click', function() {
		var addForm = document.getElementById('addForm');
		var manageForm = document.getElementById('manageForm')
		if (addForm.style.display === 'none') {
			addForm.style.display = 'block';
		} else {
			addForm.style.display = 'none';
		}
	});

</script>


