@model ProductListModel
@{
  ViewData["Title"] = "HomePage";
}

<div class="row">
  <div class="sidebar col-md-2 d-none d-md-block d-flex flex-column">
    <a class="text-decoration-none text-dark mt-4 mx-3" asp-area="" asp-controller="Gonna" asp-action="Index">Gonna</a>
    <hr class="text-secondary" />
    <a class="text-decoration-none text-dark mx-3" asp-area="" asp-controller="Jeans e pantaloni"
      asp-action="Index">Jeans e Pantaloni</a>
    <hr class="text-secondary" />
    <a class="text-decoration-none text-dark mx-3" asp-area="" asp-controller="Maglieria" asp-action="Index">Maglieria
      e felpe</a>
    <hr class="text-secondary" />
    <a class="text-decoration-none text-dark mx-3" asp-area="" asp-controller="Pantaloncini"
      asp-action="Index">Pantaloncini</a>
    <hr class="text-secondary" />
    <a class="text-decoration-none text-dark mx-3" asp-area="" asp-controller="Pezzi interi" asp-action="Index">Pezzi
      interi</a>
    <hr class="text-secondary" />
    <a class="text-decoration-none text-dark mx-3" asp-area="" asp-controller="Soprabiti"
      asp-action="Index">Soprabiti</a>
    <hr class="text-secondary" />
    <a class="text-decoration-none text-dark mx-3" asp-area="" asp-controller="Top" asp-action="Index">Top</a>
    <hr class="text-secondary" />
    <a class="text-decoration-none text-dark mx-3" asp-area="" asp-controller="Vestiti" asp-action="Index">Vestiti</a>
  </div>
  <div class="btn-group dropend col-1 d-md-none d-xs-block">
    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
    </button>
    <ul class="dropdown-menu">
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Gonna" asp-action="Index">Gonna</a></li>
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Jeans e pantaloni" asp-action="Index">Jeans e
          pantaloni</a></li>
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Maglieria" asp-action="Index">Maglieria</a></li>
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Pantaloncini" asp-action="Index">Pantaloncini</a>
      </li>
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Pezzi interi" asp-action="Index">Pezzi interi</a>
      </li>
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Soprabiti" asp-action="Index">Soprabiti</a></li>
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Top" asp-action="Index">Top</a></li>
      <li><a class="dropdown-item mb-3" asp-area="" asp-controller="Vestiti" asp-action="Index">Vestiti</a></li>
    </ul>
  </div>


  <!--MAIN CONTENT-->
  <div class=" col-sm-11  col-md-10">
    <!-- Schede dei prodotti -->
    <div class="d-grid productContainer">
      @if (Model.ProductList != null)
      {
        @foreach (var item in Model.ProductList)
        {
          <div class="productCard p-0">
        <a class="text-decoration-none">
          <div class="card border-0">
            <img src=@item.ImgURL class="card-img-home" alt=@item.Name>
            <div class="productInfo_rwyH5">
              <h2 class="productDescription">@item.Name</h2>
              <p class="fw-bold text-danger"> @item.Price €</p>
            </div>
          </div>
        </a>
        <button class="favorite-btn">
         <i class="bi bi-heart"></i>
        </button>
      </div>
        }
      }
