@model ProductListModel
@{
  ViewData["Title"] = "HomePage";
}

<div class="row">
        @await Html.PartialAsync("_SidabarPartial")
  <!--MAIN CONTENT-->
  <div class=" col-sm-11  col-md-10">
        <!--IMMAGINE GIGANTE CON TITOLO-->
        <div class="row d-none d-md-flex">            
            <div class="image col-6 p-1">
                <img class="image-fluid" id="donna" alt="donna" src="https://img01.ztat.net/banner/dbbbff261095422eb0a21dbf3f2aaf87/a5e1564accaf441ea2c2e9c7276b324b.jpg?imwidth=693" />
                <a class="hover-text text-decoration-none text-white" >DONNA</a>
            </div>
            <div class="image col-6 p-1">
                <img class="image-fluid" src="https://content.asos-media.com/-/media/homepages/mw/2025/march/03-gbl/wk27_28/wk27_28/cat-trays/2024_homepage_mw_cat_tray_02_870x700_tommy.jpg" alt="uomo" />
                <a class="hover-text text-decoration-none text-white">UOMO</a>
            </div>
        </div>
        <!-- Schede dei prodotti -->
    <div class="d-grid productContainer">
      @if (Model.ProductList != null)
      {
        @foreach (var item in Model.ProductList)
        {
          <div class="productCard p-0">
        <a class="text-decoration-none">
          <div class="card border-0">
              <div class="imgContainer">
				<img src=@item.ImgURL class="card-img-home imgProd" alt=@item.Name>
              </div>
           
            <div class="productInfo_rwyH5">
              <h2 class="productDescription">@item.Name</h2>
              <p class="fw-bold text-danger"> @item.Price €</p>
            </div>
          </div>
        </a>
        <button class="favorite-btn"> 
         <i class="bi bi-heart"></i>
        </button>
      </div>
        }
      }
    </div>
  </div>
</div>