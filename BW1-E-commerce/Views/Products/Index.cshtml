                      <div class="card h-100 shadow-sm clickable-card">
                        <img src="@product.ImagePath" alt="@product.Name" class="card-img-top" />
                        <div class="card-body text-center">
                          <p class="text-small text-muted">@product.Name</p>
                          <p class="card-text text-danger">Prezzo: €@product.Price</p>
                        </div>
                      </div>
                    </a>
                    <button class="favorite-btn">
                        ♥
                    </button>
                  </div>
                }
            *@
    </div>
  </div>
</div>