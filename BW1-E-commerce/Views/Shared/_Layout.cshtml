<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BW1_E_commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BW1_E_commerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid mx-2">
                <div class="col-1">
                <!-- LOGO -->
                <a class="navbar-brand fw-bold text-uppercase text-light" asp-area="" asp-controller="Home" asp-action="Index">Vestiti</a>
                </div>
                <!-- MENU AMBURGER -->
                <div class="col-2">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- UOMO DONNA -->
                <div class="collapse navbar-collapse " id="navbarNav">
                    <ul class="navbar-nav justify-content-evenly">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold active category-btn" asp-area="" asp-controller="Donna" asp-action="Index">DONNA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold category-btn" asp-area="" asp-controller="Uomo" asp-action="Index">UOMO</a>
                        </li>
                    </ul>
                </div>
                </div>
                <div class="col-6">
                <!-- RICERCA -->
                <div class="search-container">
                    <input class="form-control search-bar" type="search" placeholder="Ricerca per articoli e brand" aria-label="Search">
                    <button class="btn search-btn" type="submit"><i class="bi bi-search"></i></button>
                </div>
                </div>
                <div class="col-3 d-flex justify-content-end pe-5 gap-3">
                <!-- ICONE-->
                    <a href="/account" class="text-light me-3"><i class="bi bi-person fs-5"></i></a>
                    <a href="/wishlist" class="text-light me-3"><i class="bi bi-heart fs-5"></i></a>
                    <a href="/cart" class="text-light"><i class="bi bi-bag fs-5"></i></a>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BW1_E_commerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
