<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BW1_E_commerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BW1_E_commerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar  navbar-dark bg-dark">
            <div class="container-fluid mx-2">
                
                <!-- LOGO -->
                <div class="col-sm-2 col-md-1 col-lg-1">
                <a class="navbar-brand fw-bold text-uppercase text-light" asp-area="" asp-controller="Home" asp-action="Index">Vestiti</a>
                </div>
                <!--UOMO E DONNA -->
                <div class="col-sm-3 col-md-3 col-lg-2">                
                    <ul class="navbar-nav d-flex flex-row justify-content-evenly">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold active category-btn" asp-area="" asp-controller="Donna" asp-action="Index">DONNA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase fw-bold category-btn" asp-area="" asp-controller="Uomo" asp-action="Index">UOMO</a>
                        </li>
                    </ul>
               
                </div>
               
                <!-- RICERCA -->
                <div class="search-container col-sm-2 col-md-5 col-lg-6">
                    <input class="form-control search-bar d-none d-lg-block" id="search-input" type="search" placeholder="Ricerca per articoli e brand" aria-label="Search">
                    <button class="btn search-btn" type="submit"><i class="bi bi-search"></i></button>
                </div>
               
                <!-- ICONE-->
                <div class="col-sm-5 col-md-3 col-lg-3 d-flex grid gap-2 justify-content-end pe-5">
                    <!-- Dropdown  -->
                    <div class="dropdown">
                        <span class="text-light me-5" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person fs-5"></i>
                        </span>
                        <ul class="dropdown-menu dropdown-menu-end bg-dark" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item text-light" asp-area="" asp-controller="account" asp-action="Index">Il mio account</a></li>
                            <li><a class="dropdown-item text-light" asp-area="" asp-controller="Aggiungi" asp-action="Index">aggiungi</a></li>
                            <li><a class="dropdown-item text-light" href="">Logout</a></li>
                        </ul>
                    </div>

                    <!-- le altre icone -->
                    <a class="text-light me-5" asp-area="" asp-controller="lista preferiti" asp-action="Index"><i class="bi bi-heart fs-5"></i></a>
                    <a  class=" text-light" asp-area="" asp-controller="Uomo" asp-action="Index"><i class="bi bi-bag fs-5"></i></a>
                </div>
                
            </div>
        </nav>


    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BW1_E_commerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
